<UserControl x:Class="HealthyMe.UserControls.BodyImageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HealthyMe.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Image x:Name="bodyImage"
               Source="..\Resources\1-4.png"
               Grid.Column="1"
               Grid.ColumnSpan="3"
               Grid.RowSpan="4"/>

        <Button x:Name="selectButton"
                Content="Select"
                Grid.Row="4"
                Grid.Column="1"
                Grid.ColumnSpan="3"
                Foreground="{DynamicResource mainForeground}"
                Background="{DynamicResource mainButtonBackground}"/>      
    </Grid>
</UserControl>
